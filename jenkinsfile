pipeline{
    agent any

    tools {
        terraform 'terraform'
    }
    stages{
        stage ('Git checkout') {
            steps {
                git branch: 'dev', url: "https://github.com/careem111/terraform-aws.git"
            }
        }
        stage ('Terraform init'){
            steps {
                sh label: '', script: 'terraform init'
                }
            }
        }
        stage ('Terraform plan'){
            steps {
                sh label: '', script: 'terraform plan'
                }
            }
    }