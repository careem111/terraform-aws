pipeline{
    agent any

    tools {
        terraform 'terraform'
    }
    stages{
        stage ('Clone') {
            steps {
                git branch: 'dev', url: "https://github.com/careem111/terraform-aws.git"
            }
        }
        stage ('Terraform init'){
            steps {
                sh 'terraform init'
                }
            }
        stage ('Terraform apply'){
            steps {
                sh 'terraform apply --auto-approve'
                }
            }
    }
}