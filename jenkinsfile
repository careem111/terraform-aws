pipeline{
    agent any

    tools {
        terraform 'terraform'
    }
    stages{
        stage ('Clone') {
            steps {
                sh 'git clone -b dev https://github.com/careem111/terraform-aws.git'
            }
        }
        stage ('Terraform init'){
            steps {
                sh 'terraform init'
                }
            }
        stage ('Terraform plan'){
            steps {
                sh 'date'
                }
            }
    }
}